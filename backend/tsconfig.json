{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext"],
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "src",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
